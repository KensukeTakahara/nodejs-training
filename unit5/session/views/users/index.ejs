<h2>Users Table</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>ZipCode</th>
      <th>Password</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tody>
    <% users.forEach(user => { %>
    <tr>
      <td>
        <a href="<%= `/users/${user._id}` %>">
          <%= user.fullName %>
        </a>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.zipCode %>
      </td>
      <td>
        <%= user.password %>
      </td>
      <td>
        <a href="<%= `/users/${user._id}/edit` %>">
          Edit
        </a>
      </td>
      <td>
        <a
          href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure want to delete this record?')"
        >
          Delete
        </a>
      </td>
    </tr>
    <% }); %>
  </tody>
</table>
